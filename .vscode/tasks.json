{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve Frontend",
      "type": "shell",
      "command": "npx serve -l 3000",
      "options": {
        "cwd": "${workspaceFolder}\\frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Serving.*$",
          "endsPattern": "^.*Local:.*$"
        }
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Start Worker Dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/worker"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*Ready on.*$"
        }
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "group": "dev"
      }
    }
  ]
}
